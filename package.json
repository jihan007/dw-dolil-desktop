{
  "name": "DolilSheba",
  "version": "1.0.2",
  "main": "main.js",
  "description": "Desktop App for dolil.com",
  "author": "Dolil.com",
  "scripts": {
    "start": "electron .",
    "publish": "electron-builder -p always"
  },
  "devDependencies": {
    "electron": "^22.2.0",
    "electron-builder": "^23.6.0",
    "electron-notarize": "^1.1.1"
  },
  "dependencies": {
    "electron-log": "^4.4.8",
    "electron-updater": "^5.3.0"
  },
  "build": {
    "appId": "com.github.dolilsheba",
    "afterSign": "./build/notarize.js",
    "mac": {
      "category": "your.app.category.type"
    },
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false
    },
    "linux": {
      "category": "your.app.category.type",
      "target": "AppImage"
    }
  }
}
